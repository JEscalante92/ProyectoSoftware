@import 'main-header.styl'
@import 'iconos.styl'
body
  background-color: #F0F0F0
  color: #2C3E50
  font-family: 'pt_sans'
input
  color: #000
  text-align: left
  border-radius: 5px
#input-nombre .icon-user
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#input-email .icon-mail
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#input-password .icon-password
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#ingresoDatos
  display: inline-block
  margin-top: 20px
  margin-left: 20px
  vertical-align: top
  input
    height: 25px
    line-height: 25px
    border: 1px solid #2C3E50
    width: 250px

#nombre
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#email
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#password
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#titulo
  display: inline-block
  font-size: 12px
  height: 222px
  width: 380px
  text-align: center

#titulo h2
  color: #2C3E50

#wrapper-contenido
  width: 960px
  background: #fff
  margin: 10px auto
  border: 1px solid #CCCCCC
  border-radius: 5px 
  padding: 10px

#boton
  background: #0064AD
  color: #fff
  text-align: center
  border-radius: 5px
  padding: 5px
  margin-top: 10px
  border: 0
  width: 281px !important
  height: 40px !important
#opciones
  clear: both
  text-align: center
  margin-top: 20px
  section
    margin-top: 10px
    font-size: 11px
    background: #DDDDDD
    display: inline-block
    width: 200px
    text-align: center
    border-radius: 5px
    padding: 10px
#contenido-cabecera
  overflow: hidden
  width: auto
  margin: 0 100px

.contenedor-icon
  background-color: #0064AD
  border-radius: 50%
  line-height: 48px
  height: 48px
  font-size: 32px
  width: 48px
  margin: 0 auto
  span
    color: #FFFFFF
    margin: 8px

@import 'main-footer.styl'

