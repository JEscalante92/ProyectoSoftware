@import 'nib'
header
	color: #FFFFFF
	height: 50px
	margin: 0 auto
	position: relative
	width: 960px
	#logo
		color: #FFFFFF
		float: left
		position: relative
		text-decoration: none
		h1
			font-size: 24px
			float: left
			margin: 10px 10px 10px 0px
		img
			float: left
			margin: 5px 10px 5px 10px
	nav
		display: block
		float: right
		height: 50px
		ul
			margin: 0px
			padding: 0px
			font-size: 0
			li
				display: inline-block
				list-style: none
				position: relative
				vertical-align: top
				div
					font-size: 16px
					padding: 0em 0.75em
					margin: 15.5px 0px
					display: block
					border-left: 2px solid #FFFFFF
			li:last-child
				background-color: #004B8B
				position: relative
				div
					border: 0px
			li:last-child:hover
				background-color: #004B8B
			li:hover
				background: rgba(255,255,255,0.15)
#header-usuario
	margin: 7px 0px 7px 48px
	a
		text-decoration: none
		height: auto
		color: #FFFFFF
		img
			float: left
			margin-left: -48px
	p
		font-size: 14px
		display: block
		margin: 0
		padding: 0
#header-menu
	font-size: 16px
	color: #2C3E50
	border: 1px solid #004B8B
	border-top: 0
	display: none
	li
		list-style: none
		display: block
		text-align: center
		background-color: #FFFFFF
		padding: 0.3em 0em
	li:hover
		background-color: #DDDDDD
.menu-active
	display: block !important

#header-registro
	a
		text-decoration: none
	a:last-child
		background-color: rgba(255,255,255,0.95)
		border-radius: 0.3em
		padding: 0.4em
		color: #0064AD
	a:hover
		cursor: pointer
		text-decoration: underline

#header-search
	#input-search
		display: none
	.icon-search
		color: #FFFFFF
		cursor: pointer

#wrapper-header
	background-color: #0064AD

.search-active
	margin: 12.5px 0px
	position: relative
	.icon-search
		color: #2C3E50 !important
		position: absolute
		line-height: 1.5;
		padding-left: 0.3em;
	#input-search
		display: block !important
		padding: 0.1em 0em 0.1em 1.8em
		margin: 0px
		border: 1px solid #2C3E50
		border-radius: 3px
		min-height: 1.5em;
		outline: 0
		font-size: 0.875em
		color: #777777
		width: 250px