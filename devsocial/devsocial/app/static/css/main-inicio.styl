@import "nib"
@import "iconos.styl"
@import "main-header.styl"
@import "cajas.styl"
body
  background-color: #F0F0F0
  color: #2C3E50
  font-family: 'pt_sans', sans-serif
#contenido
  background: #fff
  margin: 10px auto
  border: 1px solid #CCCCCC
  border-radius: 5px 
  padding: 20px
  width: 960px
  #contenido-bienvenida
    width: 60%
    img
      width: 50%
      height: 150px
      margin: 0 auto
      display: block
      margin-bottom: 20px
    h2, h3
      text-align: center
      margin: 0
  #contenido-formulario
    float: right
    width: 40%
    form
      margin: 0 auto
      input
        display: block
        width: auto
        margin: 10px 0px
        width: 250px
        border: 1px solid #2C3E50
        height: 30px
  #contenido-informacion
    margin: 0 auto
    width: auto
    padding-top: 20px
    article
      background-color: #DDDDDD
      border-radius: 5px
      width: 20%
      padding: 10px
      text-align: center
      display: inline-block
      margin: 0 10px
      vertical-align: top
      height: 300px

#input-nombre .icon-user
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#input-email .icon-mail
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#input-password .icon-password
  color: #2C3E50 !important
  position: absolute
  line-height: 1.5
  padding-left: 0.3em

#ingresoDatos
  display: inline-block
  margin-top: 20px
  margin-left: 20px
  vertical-align: top
  input
    height: 25px
    line-height: 25px
    border: 1px solid #2C3E50
    width: 250px

#nombre
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#email
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#password
  margin-top: 10px
  display: block !important
  padding: 0.1em 0em 0.1em 1.8em

#titulo
  display: inline-block
  font-size: 12px
  height: 222px
  width: 380px
  text-align: center

#titulo h2
  color: #2C3E50

#boton
  background: #0064AD
  color: #fff
  text-align: center
  border-radius: 5px
  padding: 5px
  margin-top: 10px
  border: 0
  width: 281px !important
  height: 40px !important

#contenido-cabecera
  overflow: hidden
  width: auto
  margin: 0 100px

.contenedor-icon
  background-color: #0064AD
  border-radius: 50%
  line-height: 64px
  height: 64px
  font-size: 32px
  width: 64px
  margin: 0 auto
  span
    color: #FFFFFF
    margin: 16px

@import 'main-footer.styl'

