@import 'nib'
@import 'iconos.styl'
@import 'main-header.styl'
body
    background-color: #F0F0F0
    color: #2C3E50
    font-size 16px
#contenido
    background-color: #FFFFFF
    border: 1px solid #CCCCCC
    border-radius: 5px
    font-size: 0
    margin: 20px auto
    padding: 10px
    width: 940px
    #contenido-cabecera
        font-size: 16px
        line-height: 48px
        margin: 10px 0px
        overflow: hidden
        h2
            float: left
            margin: 0px 10px
        p
            color: #777777
            float: right
            margin: 0px 10px
        .contenedor-icon
            float: left
    #contenido-mapa
        border-top: 1px solid #CCCCCC
        overflow: hidden;
        section
            font-size: 16px
            margin: 20px
            float: left
            ul
                margin: 0
                padding-left: 20px
            li
                list-style: disc
                a
                    color: #2C3E50
                    margin: 0
                    text-decoration: none
                a:hover
                    text-decoration: underline
.contenedor-icon
    background-color: #0064AD
    border-radius: 5px
    line-height: 48px
    height: 48px
    font-size: 32px
    width: 48px
    span
        color: #FFFFFF
        margin: 8px

    
@import 'main-footer.styl'